

<div class="col-md-6 col-md-offset-3">

  <%= form_for @list do |f| %>

    <div class="form-group">
      <%= f.label :name, "Event" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :date, "Due Date" %><br>
      
      <%= f.date_select :date %>
    </div>

    <div class="form-group">
      <%= f.label :note, "Note" %>
      <%= f.text_area :note, class: "form-control" %>
    </div>

      <style>
      input {
      border-radius: 20px;
      padding-top: 5px;
      padding-bottom: 5px;
      }
      </style>

    <nav>
     <ul class="pager" >
       <li class="text-primary"><%= f.submit  %></li>
       <li><%= link_to ' Cancel', lists_url %></li>
     </ul>
    </nav>
  
  <% end %>


  <% if @list.errors.present? %>
  <div class="alert alert-danger" role="alert">
    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
    <span class="sr-only">Error:</span>
    <strong>Some errors here !</strong>

    <ul>
      <% @list.errors.each do |error, message| %>
        <li class="text-danger"><%= "#{error.capitalize}  #{message}" %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

</div>


</div>
