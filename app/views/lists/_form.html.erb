<% if @list.errors.present? %>
  <ul>
    <% @list.errors.each do |error, message| %>
      <li> <%= "#{error.capitalize}  #{message}" %></li>
    <% end %>
  </ul>
<% end %>


<%= form_for @list do |f| %>
  <%= f.label :name, "Event" %>
  <%= f.text_field :name %>

  <%= f.label :date, "Due Date" %>
  <%= f.text_field :date %>

  <%= f.label :note, "Note" %>
  <%= f.text_area :note %>


  <%= f.submit  %>
<% end %>